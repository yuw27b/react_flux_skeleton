{
  "name": "app_name",
  "version": "0.1.0",
  "description": "React.js skeleton",
  "dependencies": {
    "flux": "^3.1.0",
    "font-awesome": "^4.6.3",
    "normalize.css": "^5.0.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "eslint": "^3.3.1",
    "eslint-plugin-react": "^6.4.1",
    "node-sass": "^3.8.0",
    "onchange": "^3.0.2",
    "uglifyify": "^3.0.2",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "start": "npm run dev",
    "build": "npm run build-js & npm run vendor-css & npm run build-css & npm run copy-html",
    "dev": "npm run dev-js & npm run dev-css & npm run dev-html",
    "build-js": "mkdir -p ./public/assets/js & browserify src/scripts/main.js -t babelify | uglifyjs > public/assets/js/app.js",
    "dev-js": "watchify src/scripts/main.js -t babelify -o public/assets/js/app.js -v",
    "vendor-css": "cat node_modules/normalize.css/normalize.css node_modules/font-awesome/css/font-awesome.min.css > public/assets/css/vendor.css",
    "build-css": "mkdir -p ./public/assets/css & node-sass --output-style compressed src/styles/style.scss public/assets/css/style.css",
    "dev-css": "node-sass src/styles/style.scss public/assets/css/style.css -w",
    "copy-html": "cp ./src/*.html ./public/",
    "dev-html": "onchange src/*.html src/api/*.rb -- npm run copy-html"
  },
  "private": true
}
